<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false"
        android:layout_weight="1"
        android:layout_above="@+id/textView"

        android:choiceMode="multipleChoice">
    </ListView>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/abc_action_button_min_width_material"
        android:layout_marginLeft="@dimen/abc_action_button_min_width_material"
        android:layout_marginRight="@dimen/abc_action_button_min_width_material"
        android:id= "@+id/continue_button"
        android:layout_alignParentBottom="true"
        android:text = "Next>>"/>

</LinearLayout>
